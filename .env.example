# DCL Ecommerce Environment Variables

# Django Settings
DJANGO_SECRET_KEY=your-super-secret-key-change-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database (development uses SQLite by default)
# For production, use PostgreSQL:
# DATABASE_URL=postgres://user:password@localhost:5432/dcl_ecommerce

# Email Settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# SSLCommerz Sandbox Credentials
SSLCOMMERZ_STORE_ID=your_sandbox_store_id
SSLCOMMERZ_STORE_PASS=your_sandbox_store_password
SSLCOMMERZ_SANDBOX=True

# Redis (optional - for Celery)
REDIS_URL=redis://localhost:6379/0
